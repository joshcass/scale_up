<div class="page-header">
    <h1><%= @category ? @category.title.titleize : "Loan Requests"%></h1>
</div>

<% cache @categories do %>
    <div class="container" id="categories">
        <div class="row">
            <div class="pull-left">
                <div class="btn-group" role="group" aria-label="...">
                    <%= link_to 'All', browse_path, class: "btn btn-default" %>
                    <% @categories.each do |category| %>
                        <%= link_to category.title.titleize, category, class: "btn btn-default" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>

<br>
<div class="container">
    <div class="row">
        <div class="apple_pagination">
            <%= will_paginate @loan_requests, id: 'pageLinks' %>
        </div>
    </div>
</div>

<div class="container" id="loanRequests">
    <div class="row">
        <%= render partial: "shared/loan_request", collection: @loan_requests %>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="apple_pagination">
            <%= will_paginate @loan_requests %>
        </div>
    </div>
</div>
